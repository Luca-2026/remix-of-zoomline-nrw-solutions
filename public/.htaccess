# =============================================
# .htaccess für arbeitsbuehne-kaufen-nrw.de
# Hosting: Serverprofis (Apache)
# React SPA mit SEO-optimierten URLs
# =============================================

# Rewrite Engine aktivieren
RewriteEngine On

# =============================================
# 1. HTTPS erzwingen
# =============================================
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =============================================
# 2. www auf non-www umleiten (canonical)
# =============================================
RewriteCond %{HTTP_HOST} ^www\.arbeitsbuehne-kaufen-nrw\.de$ [NC]
RewriteRule ^(.*)$ https://arbeitsbuehne-kaufen-nrw.de/$1 [L,R=301]

# =============================================
# 3. 301-Redirects alte URLs → neue SEO-URLs
# =============================================
RewriteRule ^arbeitsbuehnen/?$ /arbeitsbuehne-kaufen-nrw [L,R=301]
RewriteRule ^hot-deals/?$ /arbeitsbuehne-sonderangebote-nrw [L,R=301]
RewriteRule ^service/?$ /arbeitsbuehne-service-nrw [L,R=301]
RewriteRule ^standorte/?$ /arbeitsbuehne-kaufen-standorte-nrw [L,R=301]
RewriteRule ^finanzierung/?$ /arbeitsbuehne-finanzierung-nrw [L,R=301]

# =============================================
# 4. React SPA Routing (HTML5 History API)
# Alle Anfragen, die keine Datei oder Ordner sind,
# werden auf index.html umgeleitet
# =============================================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ /index.html [QSA,L]

# =============================================
# 5. GZIP-Komprimierung
# =============================================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE font/woff2
</IfModule>

# =============================================
# 6. Browser-Caching (Performance & Core Web Vitals)
# =============================================
<IfModule mod_expires.c>
  ExpiresActive On

  # Bilder: 1 Jahr
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # Fonts: 1 Jahr
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"

  # CSS & JS (Vite hashed filenames): 1 Jahr
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"

  # HTML: kein Cache (SPA muss immer frisch geladen werden)
  ExpiresByType text/html "access plus 0 seconds"

  # JSON & XML: 1 Stunde
  ExpiresByType application/json "access plus 1 hour"
  ExpiresByType application/xml "access plus 1 hour"

  # PDFs (Datenblätter): 1 Monat
  ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# =============================================
# 7. Security Headers
# =============================================
<IfModule mod_headers.c>
  # XSS-Schutz
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"

  # Kein Cache für HTML (SPA index.html)
  <FilesMatch "\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # Immutable Cache für gehashte Assets (Vite Build)
  <FilesMatch "\.(js|css|woff2|woff|png|jpg|webp|svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# =============================================
# 8. Fehlerseiten
# =============================================
ErrorDocument 404 /index.html

# =============================================
# 9. Verzeichnis-Listing deaktivieren
# =============================================
Options -Indexes

# =============================================
# 10. Schutz sensibler Dateien
# =============================================
<FilesMatch "(\.env|\.git|\.htaccess)$">
  Order allow,deny
  Deny from all
</FilesMatch>
